<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/round_card"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_op_second"
        android:layout_width="52dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bolt"
        app:layout_constraintBottom_toBottomOf="@+id/round_card"
        app:layout_constraintStart_toStartOf="@+id/round_card"
        app:layout_constraintTop_toTopOf="@+id/round_card" />

    <ImageView
        android:id="@+id/left_op_first"
        android:layout_width="52dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bolt"
        app:layout_constraintBottom_toBottomOf="@+id/left_op_second"
        app:layout_constraintStart_toStartOf="@+id/left_op_second"
        app:layout_constraintTop_toTopOf="@+id/left_op_second"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/right_op_second"
        android:layout_width="52dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:src="@drawable/ic_bolt"
        app:layout_constraintBottom_toBottomOf="@+id/round_card"
        app:layout_constraintEnd_toEndOf="@+id/round_card"
        app:layout_constraintTop_toTopOf="@+id/round_card" />

    <ImageView
        android:id="@+id/right_op_first"
        android:layout_width="52dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:src="@drawable/ic_bolt"
        app:layout_constraintBottom_toBottomOf="@+id/right_op_second"
        app:layout_constraintEnd_toEndOf="@+id/right_op_second"
        app:layout_constraintTop_toTopOf="@+id/right_op_second"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.CardView
        android:id="@+id/field_name_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/round_card"
        app:layout_constraintEnd_toStartOf="@+id/right_op_first"
        app:layout_constraintStart_toEndOf="@+id/left_op_first"
        app:layout_constraintTop_toTopOf="@+id/round_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field_name_txt"
            android:text="؟؟؟"
            android:textSize="22pt"/>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>