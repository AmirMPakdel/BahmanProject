<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackcoin.packdel.bahmanproject.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:background="@drawable/background_toolbar"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/ic_settings_24dp"/>

            <ImageView
                android:id="@+id/archives_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_perm_media_24dp"/>

            <Space
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/competition_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_group_24dp"/>

            <ImageView
                android:id="@+id/shop_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_shopping_24dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:background="@drawable/background_toolbar"
            android:src="@drawable/ic_home_24dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/splashScreen_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
